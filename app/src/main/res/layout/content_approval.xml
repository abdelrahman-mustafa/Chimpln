<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.indeves.chmplinapp.Activities.Approval"
    tools:layout_editor_absoluteY="81dp"
    tools:showIn="@layout/activity_approval">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/include3"
            layout="@layout/usage_stateprogressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp" />

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"


            android:layout_alignTop="@+id/include3"

            android:layout_marginLeft="50sp"
            android:layout_marginRight="50sp"
            android:layout_marginTop="40sp"
            android:gravity="center_vertical|center_horizontal|fill_horizontal|center|clip_vertical|clip_horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="30sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="45sp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:text="@string/date" />

                <TextView
                    android:id="@+id/approval_date_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="60sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="45sp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:text="@string/time" />

                <TextView
                    android:id="@+id/approval_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="90sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="45sp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:width="45sp"
                    android:text="@string/Location" />

                <TextView
                    android:id="@+id/approval_location"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:width="60sp"
                    android:autoText="true"
                    android:maxLines="1"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="150sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="45sp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:text="@string/photographer" />

                <TextView
                    android:id="@+id/approval__pro"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="210sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="45sp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:text="@string/event_type" />

                <TextView
                    android:id="@+id/approval_type"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_marginTop="240sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="45sp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:text="@string/sharing" />

                <TextView
                    android:id="@+id/approval_sharing"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="TextView" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50sp"
                android:layout_marginTop="270sp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="45sp"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:text="@string/notes" />

                <TextView
                    android:id="@+id/approval_notes"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignEnd="@+id/relativeLayout"
                    android:layout_below="@+id/relativeLayout"
                    android:layout_weight="1"
                    android:lines="2"
                    android:maxLines="4"
                    android:text="TextView" />


            </LinearLayout>
        </RelativeLayout>

        <Button
            android:id="@+id/approvalbtnn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="79dp"
            android:background="@drawable/button_package"
            android:gravity="center"
            android:text="@string/pending"
            android:textColor="@color/colorWhite" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
