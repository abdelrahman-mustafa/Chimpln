<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.indeves.chmplinapp.Activities.Contactpro"
    tools:showIn="@layout/activity_contactpro">

    <include
        android:id="@+id/include"
        layout="@layout/usage_stateprogressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/textView_thankYou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/include"
        android:layout_centerHorizontal="true"
        android:text="Thank you!"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView_thankYou"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="The pro accepted your event and it's booked, you can contact the photographer now."
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/contactPro_paymentDetails_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        android:text="A collector will call you to collect the deposit to confirm your request."
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contactPro_paymentDetails_textView"
        android:layout_marginEnd="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="30dp"
        android:text="Please note: \n - 20% deposit must be paid whithin 48 hours. If not, the request will be cancelled automatically. \n - You can refund the full deposit up till 1 week before the event, 10% back till 48 hours. Zero before 48 hours only." />


    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="44dp"
        android:background="@drawable/button_package"
        android:paddingEnd="50dp"
        android:paddingStart="50dp"
        android:text="Contact Photographer"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite" />

</RelativeLayout>
