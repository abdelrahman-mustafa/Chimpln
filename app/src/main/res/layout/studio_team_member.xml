<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp">

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingEnd="5dp"
        android:paddingStart="5dp">

        <ImageView
            android:id="@+id/team_member_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerVertical="true"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/team_member_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/team_member_image"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/team_member_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/team_member_name"
            android:layout_below="@+id/team_member_name"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/team_member_image"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/team_member_events_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:text="0"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/eventCountHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/team_member_events_count"
            android:layout_marginEnd="10dp"
            android:text="Events"
            android:textSize="15sp" />

        <Button
            android:id="@+id/team_member_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/my_button"
            android:text="Delete"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:visibility="visible" />

        <View
            android:id="@+id/separator1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorTab" />
    </RelativeLayout>


</android.support.v7.widget.CardView>