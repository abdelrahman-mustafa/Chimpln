        <!--/>-->

        <!--<TextView-->
        <!--android:id="@+id/editProfile_edit_state_textView"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Edit"-->
        <!--android:textColor="@android:color/holo_red_light"-->
