<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_marginBottom="30dp">

    <com.kofigyan.stateprogressbar.StateProgressBar
        android:id="@+id/usage_stateprogressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        app:spb_animateToCurrentProgressState="true"
        app:spb_checkStateCompleted="false"
        app:spb_currentStateDescriptionColor="@color/black"
        app:spb_descriptionTopSpaceIncrementer="3dp"
        app:spb_maxStateNumber="three"
        app:spb_stateBackgroundColor="@color/state_background_color"
        app:spb_stateDescriptionColor="@color/state_background_color"
        app:spb_stateForegroundColor="@color/colorPur"
        app:spb_stateNumberBackgroundColor="@color/colorWhite"
        app:spb_stateNumberForegroundColor="@color/colorWhite"


        />
</LinearLayout>