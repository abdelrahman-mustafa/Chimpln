<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Content_homePage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:elevation="3dp">


    <LinearLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/userProfile_phot_search_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:src="@drawable/user"
            android:paddingRight="5dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userProfile_phot_search_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photographer Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userProfile_phot_search_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Location"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/userProfile_phot_search_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="top|clip_vertical|fill_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/userProfile_phot_search_price"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="top|right"
                android:layout_weight="1"
                android:text="5000"
                android:textColor="@color/colorPrice"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/userProfile_phot_search_currency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="EGP"
                android:textSize="15sp"
                android:textStyle="normal" />
        </LinearLayout>

    </LinearLayout>

