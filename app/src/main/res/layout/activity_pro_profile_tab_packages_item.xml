<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Content_homePage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:elevation="3dp">


    <LinearLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/proProfile_myPackage_packageName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Golden Package"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/proProfile_myPackage_eventTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event time"
                android:textSize="15sp"
                android:textStyle="normal" />


            <TextView

                android:id="@+id/proProfile_myPackage_eventType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Type"
                android:textSize="15sp" />

            <TextView

                android:id="@+id/proProfile_myPackage_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="photo and videos"
                android:textSize="15sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/proProfile_myPackage_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="5000"
                android:textColor="@color/colorPrice"
                android:textSize="50sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/proProfile_myPackage_currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="EGP"
                android:textSize="40sp"
                android:textStyle="normal" />
        </LinearLayout>
    </LinearLayout>

    <!--<View-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1dp"-->
    <!--android:background="@color/colorProfile" -->
    <!--/>-->

</android.support.v7.widget.CardView>